{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/nimazasinich/DreammakerCryptoSignalAndTrader/ci-config-schema.json",
  "title": "CI Configuration Schema",
  "description": "Schema for DreamMaker CI/CD pipeline configuration",
  "type": "object",
  "required": ["version", "name", "pipeline", "jobs"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "description": "Configuration version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "name": {
      "type": "string",
      "description": "Pipeline name"
    },
    "description": {
      "type": "string",
      "description": "Pipeline description"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string",
          "format": "date"
        },
        "last_updated": {
          "type": "string",
          "format": "date"
        },
        "maintainer": {
          "type": "string"
        },
        "documentation": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "pipeline": {
      "type": "object",
      "required": ["name", "trigger_events"],
      "properties": {
        "name": {
          "type": "string"
        },
        "trigger_events": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["push", "pull_request", "schedule", "workflow_dispatch", "release"]
          }
        },
        "branches": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "timeout_minutes": {
          "type": "integer",
          "minimum": 1,
          "maximum": 360
        }
      }
    },
    "jobs": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "timeout_minutes": {
            "type": "integer",
            "minimum": 1
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "conditional": {
            "type": "string"
          },
          "outputs": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "artifacts": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "path": {
                  "oneOf": [
                    {"type": "string"},
                    {"type": "array", "items": {"type": "string"}}
                  ]
                },
                "description": {
                  "type": "string"
                },
                "files": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "retention_days": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 90
                }
              }
            }
          }
        }
      }
    },
    "reports": {
      "type": "object",
      "properties": {
        "directory": {
          "type": "string"
        },
        "retention_days": {
          "type": "integer"
        },
        "formats": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["json", "markdown", "html", "xml"]
          }
        }
      }
    },
    "environment_variables": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "value": {
            "type": ["string", "number", "boolean"]
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
}
