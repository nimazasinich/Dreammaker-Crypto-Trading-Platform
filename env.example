# ===============================================
# DREAMMAKER CRYPTO TRADING PLATFORM
# Environment Configuration Template
# ===============================================
# 
# SECURITY WARNING: 
# - NEVER commit real API keys to version control
# - Copy this file to 'env' and replace placeholders with real values
# - Keep all env files private and secure
#

# ===============================================
# API BASE CONFIGURATION
# ===============================================
VITE_API_BASE=
VITE_WS_BASE=ws://localhost:8001

# ===============================================
# DATA POLICY CONFIGURATION
# ===============================================
VITE_APP_MODE=online
VITE_STRICT_REAL_DATA=true
VITE_USE_MOCK_DATA=false
VITE_ALLOW_FAKE_DATA=false

# ===============================================
# HUGGING FACE API CONFIGURATION
# ===============================================
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here
HUGGINGFACE_API_KEY=your_huggingface_token_here

# HuggingFace Space Configuration
HF_ENGINE_BASE_URL=https://really-amin-datasourceforcryptocurrency-2.hf.space
HF_ENGINE_TIMEOUT=60000
HF_AMIN_SPACE_RUNTIME_URL=https://really-amin-datasourceforcryptocurrency-2.hf.space
HF_AMIN_SPACE_REPO_URL=https://huggingface.co/spaces/Really-amin/Datasourceforcryptocurrency-2
PRIMARY_DATA_SOURCE=huggingface
HF_ENGINE_ENABLED=true

# Local Model Fallback Configuration
# Enable this to use local/self-hosted models when HF API is unavailable
USE_LOCAL_MODEL=false
LOCAL_MODEL_URL=http://localhost:5000/inference
LOCAL_MODEL_TYPE=sentiment  # sentiment, classification, etc.

# Model Validation
# Pre-validate models before calling (adds extra API call but prevents 404s)
HF_VALIDATE_MODELS=false

# ===============================================
# BLOCKCHAIN EXPLORER API KEYS
# ===============================================
# TronScan API: https://tronscan.org/#/
TronScan=your_tronscan_api_key_here
TRONSCAN_API_KEY=your_tronscan_api_key_here

# BscScan API: https://bscscan.com/apis
BscScan=your_bscscan_api_key_here
BSCSCAN_API_KEY=your_bscscan_api_key_here

# Etherscan APIs: https://etherscan.io/apis
Etherscan=your_etherscan_api_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here
Etherscan_2=your_etherscan_backup_api_key_here
ETHERSCAN_BACKUP_API_KEY=your_etherscan_backup_api_key_here

# ===============================================
# NEWS & MARKET DATA APIs
# ===============================================
# NewsAPI: https://newsapi.org/
NEWS_API_KEY=your_newsapi_key_here
NEWSAPI_KEY=your_newsapi_key_here

# CoinMarketCap: https://coinmarketcap.com/api/
CMC_API_KEY=your_coinmarketcap_api_key_here
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
CMC_API_KEY_2=your_coinmarketcap_backup_api_key_here
COINMARKETCAP_API_KEY_2=your_coinmarketcap_backup_api_key_here
ENABLE_CMC=false

# CryptoCompare: https://www.cryptocompare.com/cryptopian/api-keys
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here

# ===============================================
# OPTIONAL MARKET DATA APIs
# ===============================================
# Messari: https://messari.io/api
MESSARI_API_KEY=your_messari_api_key_here

# Santiment: https://santiment.net/
SANTIMENT_API_KEY=your_santiment_api_key_here

# CoinMetrics: https://coinmetrics.io/
COINMETRICS_API_KEY=your_coinmetrics_api_key_here

# ===============================================
# SERVER CONFIGURATION
# ===============================================
PORT=8001
NODE_ENV=development

# Frontend Origin (comma-separated for multiple origins)
# In production, set this to your actual domain(s)
FRONTEND_ORIGIN=http://localhost:5173,http://127.0.0.1:5173

# ===============================================
# PROXY CONFIGURATION (Optional - for Binance access)
# ===============================================
# Uncomment and configure if you need proxy for Binance
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080
# USE_GLOBAL_PROXY_FOR_BINANCE=false

# ===============================================
# BACKEND THROTTLING & DATA INGESTION
# ===============================================
START_INGEST_ON_BOOT=false
ENABLE_INGEST_CRON=false
WATCHED_SYMBOLS=BTC,ETH
STARTUP_INTERVALS=15m
STARTUP_HIST_LIMIT=200
DISABLE_NEWS=true
DISABLE_SENTIMENT=true

# ===============================================
# FRONTEND CONFIGURATION
# ===============================================
VITE_WS_CONNECT_ON_START=false
VITE_DISABLE_INITIAL_LOAD=false
VITE_REFRESH_MS=120000

# ===============================================
# RESILIENCE & FALLBACK CONFIGURATION
# ===============================================
AXIOS_MAX_RETRIES=3
BOOT_NO_RETRY=false
BOOT_PRIMARY_ONLY=false
BOOT_WINDOW_MS=120000

# ===============================================
# SECURITY CONFIGURATION
# ===============================================
# Rate Limiting (requests per window per IP)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_random_session_secret_here

# ===============================================
# OPTIONAL: TELEGRAM BOT (for notifications)
# ===============================================
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# TELEGRAM_CHAT_ID=your_telegram_chat_id_here

